        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:drawableRight="@drawable/ic_action_button2"
        android:drawableLeft="@drawable/ic_action_button"
        android:drawableEnd="@drawable/ic_action_button2"
        android:drawableStart="@drawable/ic_action_button"
        android:background="#5E5D5D"
        android:textColor="@android:color/white"
        android:typeface="monospace"
        android:text="@string/anayemekler"
        />

    <ImageButton
        android:id="@+id/imageView2"
        android:scaleType="fitXY"
        android:layout_width="155dp"
        android:layout_height="97dp"
        android:layout_alignTop="@id/textView"
        android:layout_alignRight="@id/textView"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="108dp"
        android:layout_marginRight="108dp"
        app:srcCompat="@drawable/pilavmakarna" />

    <Button
        android:id="@+id/button6"
